<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Day Meal"
        android:id="@+id/mealDialogTitle"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Dishes"
        android:textSize="20dp"
        android:background="#212121"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/mealDialogRecipeSpinnerLinearLayout"
        android:layout_gravity="center_horizontal">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mealDialogRecipeSpinner"
            android:layout_gravity="center_horizontal"
            android:background="#C5E1A5"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" />


    </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/mealDialogAddNewSpinner"
        android:background="#C5E1A5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="7dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>




</LinearLayout>